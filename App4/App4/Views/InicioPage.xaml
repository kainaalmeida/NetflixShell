<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="App4.Views.InicioPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:d="http://xamarin.com/schemas/2014/forms/design"
    xmlns:fontawesome="clr-namespace:App4.Utils"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    BackgroundColor="#171717"
    mc:Ignorable="d">

    <Shell.TitleView>
        <StackLayout VerticalOptions="Center">
            <Image
                HeightRequest="50"
                HorizontalOptions="Center"
                Source="logo.png"
                VerticalOptions="CenterAndExpand"
                WidthRequest="100" />
        </StackLayout>
    </Shell.TitleView>

    <ContentPage.Content>
        <ScrollView VerticalOptions="Start">

            <Grid RowSpacing="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="190" />
                    <RowDefinition Height="190" />
                    <RowDefinition Height="190" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="380" />
                </Grid.RowDefinitions>

                <StackLayout Grid.Row="0" Margin="10,20,10,0">
                    <Label
                        FontAttributes="Bold"
                        FontSize="16"
                        Text="Continuar assistindo como KAINÃ"
                        TextColor="White" />
                    <CollectionView ItemsSource="{Binding Kaina}" VerticalOptions="Start">
                        <CollectionView.ItemsLayout>
                            <GridItemsLayout Orientation="Horizontal" />
                        </CollectionView.ItemsLayout>
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="5,0">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="auto" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="100" />
                                    </Grid.ColumnDefinitions>

                                    <Image
                                        Grid.Row="0"
                                        Grid.Column="0"
                                        Aspect="AspectFill"
                                        Source="{Binding url_image}" />

                                </Grid>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </StackLayout>

                <StackLayout Grid.Row="1" Margin="10,20,10,0">
                    <Label
                        FontAttributes="Bold"
                        FontSize="16"
                        Text="Adicionados recentemente"
                        TextColor="White" />
                    <CollectionView ItemsSource="{Binding Recentes}" VerticalOptions="Start">
                        <CollectionView.ItemsLayout>
                            <GridItemsLayout Orientation="Horizontal" />
                        </CollectionView.ItemsLayout>
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="5,0">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="auto" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="100" />
                                    </Grid.ColumnDefinitions>

                                    <Image
                                        Grid.Row="0"
                                        Grid.Column="0"
                                        Aspect="AspectFill"
                                        Source="{Binding url_image}" />

                                </Grid>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </StackLayout>

                <StackLayout Grid.Row="2" Margin="10,20,10,0">
                    <Label
                        FontAttributes="Bold"
                        FontSize="16"
                        Text="Em alta"
                        TextColor="White" />
                    <CollectionView ItemsSource="{Binding EmAlta}" VerticalOptions="Start">
                        <CollectionView.ItemsLayout>
                            <GridItemsLayout Orientation="Horizontal" />
                        </CollectionView.ItemsLayout>
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="5,0">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="auto" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="100" />
                                    </Grid.ColumnDefinitions>

                                    <Image
                                        Grid.Row="0"
                                        Grid.Column="0"
                                        Aspect="AspectFill"
                                        Source="{Binding url_image}" />

                                </Grid>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </StackLayout>

                <StackLayout Grid.Row="3" Margin="10,20,10,0">
                    <Label
                        FontAttributes="Bold"
                        FontSize="16"
                        Text="Já disponível"
                        TextColor="White" />
                    <Image Aspect="AspectFit" Source="{Binding Movies.url_image}" />

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="35" />
                        </Grid.RowDefinitions>

                        <Frame Grid.Column="0" Padding="0">
                            <Label
                                FontAttributes="Bold"
                                HorizontalOptions="Center"
                                TextColor="Black"
                                VerticalOptions="Center">
                                <Label.FormattedText>
                                    <FormattedString>
                                        <Span FontFamily="{StaticResource FontAwesomeSolid}" Text="{x:Static fontawesome:FontAwesomeIcons.Play}" />
                                        <Span Text=" Assistir" />
                                    </FormattedString>
                                </Label.FormattedText>
                            </Label>
                        </Frame>

                        <Frame
                            Grid.Column="1"
                            Padding="0"
                            BackgroundColor="#2e3131">
                            <Label
                                FontAttributes="Bold"
                                HorizontalOptions="Center"
                                TextColor="White"
                                VerticalOptions="Center">
                                <Label.FormattedText>
                                    <FormattedString>
                                        <Span FontFamily="{StaticResource FontAwesomeSolid}" Text="{x:Static fontawesome:FontAwesomeIcons.Plus}" />
                                        <Span Text=" Minha lista" />
                                    </FormattedString>
                                </Label.FormattedText>
                            </Label>
                        </Frame>

                    </Grid>

                </StackLayout>

                <StackLayout Grid.Row="4" Margin="10,20,10,0">
                    <Label
                        FontAttributes="Bold"
                        FontSize="16"
                        Text="Original Netflix &gt;"
                        TextColor="White" />
                    <CollectionView ItemsSource="{Binding Original}">
                        <CollectionView.ItemsLayout>
                            <GridItemsLayout Orientation="Horizontal" />
                        </CollectionView.ItemsLayout>
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="5,0">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="200" />
                                    </Grid.ColumnDefinitions>

                                    <Image
                                        Grid.Row="0"
                                        Grid.Column="0"
                                        Aspect="AspectFit"
                                        Source="{Binding url_image}" />

                                </Grid>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </StackLayout>

            </Grid>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>